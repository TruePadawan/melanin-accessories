---
import type { Product } from "../../sanity.types";
import { urlForImage } from "../utils/sanity-utils";
import ProductItemInterestButton from "./ProductItemInterestButton";

interface Props {
	product: Pick<Product, "_id" | "title" | "slug" | "price" | "images">;
}
const { product } = Astro.props;
---

<li class="w-full max-w-sm mx-auto">
	<a href={`/products/${product.slug.current}`} class="block overflow-hidden">
		<img
			src={urlForImage(product.images[0]).url()}
			alt={product.title}
			class="w-full aspect-square object-cover transition-transform duration-300 hover:scale-110"
		/>
	</a>
	<div class="flex">
		<div class="grow py-3 sm:py-4 px-2 bg-black/10">
			<a href={`/products/${product.slug.current}`} class="block">
				<h3 class="text-base sm:text-lg">
					{product.title}
				</h3>
			</a>
			<p class="text-gray-600 font-semibold">
				â‚¦{product.price.toFixed(2)}
			</p>
		</div>
		<ProductItemInterestButton product={product} client:only="react" />
	</div>
</li>
