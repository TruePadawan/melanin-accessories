---
import Layout from "../layouts/Layout.astro";
import ChevronRight from "../../public/icons/chevron-right.svg";
import ChevronLeft from "../../public/icons/chevron-left.svg";
---

<Layout pageTitle="Melanin Accessories - Home">
	<main
		class="grow mt-16 p-8 py-16 md:px-32 md:py-44 flex flex-col gap-8"
		slot="hero">
		<h1
			class="tracking-widest text-4xl md:text-5xl xl:text-6xl font-medium font-playfair">
			Fashion meets Self-Expression
		</h1>
		<p
			class="text-xl xl:2xl font-montserrat font-light max-w-2xl text-gray-700">
			A place to elevate your style with our accessories. From statement
			pieces to timeless essentials, every item is crafted with love and
			attention to detail
		</p>
		<a
			href="/catalog"
			id="browse-catalog"
			class="flex justify-center md:self-start mt-6 p-6 border-2 border-primary shadow-sm rounded-sm font-montserrat font-medium hover:bg-primary hover:text-white">
			<span>Browse our catalog</span>
			<ChevronRight id="chevron-right" />
		</a>
	</main>
	<section
		aria-labelledby="latest"
		class="bg-white p-8 md:p-16 lg:px-32 font-lexend">
		<div class="flex justify-between items-center">
			<h2 id="latest" class="text-2xl font-medium">Latest</h2>
			<div class="flex items-center gap-4">
				<button
					class="p-2 rounded-full hover:bg-gray-200 transition-colors cursor-pointer">
					<ChevronLeft />
				</button>
				<button
					class="p-2 rounded-full hover:bg-gray-200 transition-colors cursor-pointer">
					<ChevronRight />
				</button>
			</div>
		</div>
		<ul
			class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 mt-4">
			<li class="max-w-sm">
				<img
					src="/images/test.jpg"
					alt="Latest Item"
					class="w-full h-[384px] object-top object-cover"
				/>
				<div class="p-4">
					<h3 class="text-lg font-semibold">Item Title</h3>
					<p class="mt-1 text-gray-600">$19.99</p>
				</div>
			</li>
			<li class="max-w-sm">
