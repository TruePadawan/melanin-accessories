</Layout>

<style>
	#browse-catalog {
		display: flex;
		gap: 1rem;
		transition: background-color 200ms;

		#chevron-right {
			width: 0;
			opacity: 0;
			transform: translateX(-10px);
			transition: all 200ms ease;
			overflow: hidden;
		}

		&:hover {
			#chevron-right {
				width: 24px;
				opacity: 1;
				transform: translateX(0);
			}
		}
	}
</style>
